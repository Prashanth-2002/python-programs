secret_word="guess"
guess= " "
chance=0
chance_limit=3
out_of_guess=False
while guess!=secret_word and not(out_of_guess):
  if chance<chance_limit:
    guess=input("guess a word :")
    chance=chance+1
  else:
    out_of_guess=True;
  
  
if(out_of_guess):
 print("you lose")
else:
 print("you win")
